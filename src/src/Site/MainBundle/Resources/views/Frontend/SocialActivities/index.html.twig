{% from 'SiteMainBundle:Frontend/News:macros.html.twig' import listTab %}
{% from 'SiteMainBundle:Frontend/GroupCompany:macros.html.twig' import listTabGroup %}
{% from 'SiteMainBundle:Frontend/News:macros.html.twig' import listSidebarNews %}

<!-- Main -->
<section class="main">
    <div class="CursorAnimateRotate">
        <div class="slider">
            {% for slider in socialActivities %}
                <div {% if slider.webPath|length > 0 %}style="background: url('{{ image(slider.webPath).cropResize(1920).jpeg(80) }}') center center no-repeat; background-size: cover;"{% endif %} {% if slider.video|length > 0 and mobile == false %}data-video='{{ asset('uploads/background/' ~ slider.video) }}' class="video"{% endif %}>
                    <div class="wrap-sticker">
                        <div class="sticker revealOnScroll" data-animation="fadeInRight">
                            <div class="wrap">
                                {{ slider.text|raw }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="cursor"><div class="cursorIcon"></div></div>
    </div>

    {#<a href="#posts" class="icon-arrow revealOnScroll" data-animation="fadeInUp"></a>#}
</section>
<!-- end Main -->

<!-- Text -->
